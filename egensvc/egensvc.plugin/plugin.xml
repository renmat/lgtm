<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="com.github.renmat.egensvc.egit.threeWayMergeStrategy"
         name="egensvcrecursive"
         point="org.eclipse.egit.core.mergeStrategy">
      <strategy
            class="com.github.renmat.egensvc.egit.ThreeWayMergeStrategy"
            label="label"
            name="egensvcrecursive">
      </strategy>
   </extension>
   <extension
         id="com.github.renmat.egensvc.egit.branchNameProvider"
         name="com.github.renmat.egensvc.egit.branchNameProvider"
         point="org.eclipse.egit.ui.branchNameProvider">
      <branchNameProvider
            class="com.github.renmat.egensvc.egit.BranchNameProvider">
      </branchNameProvider>
   </extension>
   <extension
         id="com.github.renmat.egensvc.egit.commitMessageProvider"
         name="com.github.renmat.egensvc.egit.commitMessageProvider"
         point="org.eclipse.egit.ui.commitMessageProvider">
      <commitMessageProvider
            class="com.github.renmat.egensvc.egit.CommitMessageProvider">
      </commitMessageProvider>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            id="com.github.renmat.egensvc.pref.eGenSvcPref"
            name="eGenSvc Preferences"
            class="com.github.renmat.egensvc.pref.EGenSvcPref">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.github.renmat.egensvc.pref.EGenSvcPrefInit">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="com.github.renmat.egensvc.commands.category"
            name="eGenSvc Commands Category">
      </category>
      <command
            categoryId="com.github.renmat.egensvc.commands.category"
            name="eGenSvc Gitops Command"
            id="com.github.renmat.egensvc.action.gitopsHandler">
      </command>
      <command
            categoryId="com.github.renmat.egensvc.commands.category"
            name="eGenSvc External Tool Command"
            id="com.github.renmat.egensvc.action.extLauncherHandler">
      </command>
   </extension>   
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.github.renmat.egensvc.action.GitopsHandler"
            commandId="com.github.renmat.egensvc.action.gitopsHandler">
      </handler>
      <handler
            class="com.github.renmat.egensvc.action.ExtLauncherHandler"
            commandId="com.github.renmat.egensvc.action.extLauncherHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.github.renmat.egensvc.action.gitopsHandler"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
      <key
            commandId="com.github.renmat.egensvc.action.extLauncherHandler"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+7">
      </key>
   </extension>      
   <extension
         point="org.eclipse.ui.menus">
         <!--
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="com.github.renmat.egensvc.menus.sampleMenu"
               label="eGenSvc Menu"
               mnemonic="M">
            <command
                  commandId="com.github.renmat.egensvc.action.gitopsHandler"
                  id="com.github.renmat.egensvc.action.gitopsHandler"
                  mnemonic="S">
            </command>
            <command
                  commandId="com.github.renmat.egensvc.action.extLauncherHandler"
                  id="com.github.renmat.egensvc.action.extLauncherHandler"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      -->
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="com.github.renmat.egensvc.toolbars.eGenSvcToolbar">
            <command
                  id="com.github.renmat.egensvc.action.gitopsHandler"
                  commandId="com.github.renmat.egensvc.action.gitopsHandler"
                  icon="icons/gitbot.png"
                  tooltip="Run Gitops">
				</command>
            <command
                  id="com.github.renmat.egensvc.action.extLauncherHandler"
                  commandId="com.github.renmat.egensvc.action.extLauncherHandler"
                  icon="icons/swtbot.png"
                  tooltip="Run External Tool">
            </command>
         </toolbar>
      </menuContribution>
   </extension>   
   <extension
         point="org.eclipse.ui.views">
      <category
            name="eGenSvc Category"
            id="eGenSvcViewCat">
      </category>
      <view
            id="com.github.renmat.egensvc.views.eGenSvcBrowserView"
            name="eGenSvc View"
            icon="icons/swtbot.png"
            class="com.github.renmat.egensvc.views.EGenSvcBrowserView"
            category="eGenSvcViewCat"
            inject="true">
      </view>
   </extension>   
</plugin>
